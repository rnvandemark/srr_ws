<launch>
  <arg name="world" default="basic" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch" >
		<arg name="world_name" value="$(find srr_sim)/world/$(arg world).world" />
		<arg name="paused" value="false" />
		<arg name="verbose" value="true" />
	</include>

  <arg name="integrated_model_name" value="srr_integrated" />
  <arg name="init_vehicle_pose" value="-x 0 -y 0 -z 2 -R 0 -P 0 -Y 0" />
  <arg name="vehicle_controllers" value="front_left_joint_controller
                                         front_right_joint_controller
                                         rear_left_joint_controller
                                         rear_right_joint_controller
                                         front_left_wheel_joint_controller
                                         front_right_wheel_joint_controller
                                         rear_left_wheel_joint_controller
                                         rear_right_wheel_joint_controller" />
  <param name="robot_description" textfile="$(find srr_sim)/urdf/$(arg integrated_model_name).urdf" />
  <rosparam file="$(find srr_sim)/config/vehicle_controllers.yaml" command="load"/>
  <rosparam subst_value="True">
    /srr_model_name: $(arg integrated_model_name)
    /$(arg integrated_model_name)/init_pose: $(arg init_vehicle_pose)
    /$(arg integrated_model_name)/joint_zero_offsets: FL_Joint=0,FL_Rev_Joint=0,FR_Joint=0,FR_Rev_Joint=0,RL_Joint=0,RR_Joint=0
    /$(arg integrated_model_name)/joint_rotations_of_direction: FL_Joint=-1,FL_Rev_Joint=+1,FR_Joint=-1,FR_Rev_Joint=+1,RL_Joint=+1,RR_Joint=+1
  </rosparam>

  <node
    name="joint_state_publisher"
    pkg="joint_state_publisher"
    type="joint_state_publisher" >
    <param name="use_gui" value="false" />
  </node>
  <node
    name="robot_state_publisher"
    pkg="robot_state_publisher"
    type="robot_state_publisher"
    respawn="false"
    output="screen" />
  <node
    name="controller_spawner"
    pkg="controller_manager"
    type="spawner"
    respawn="false"
    output="screen"
    ns="/$(arg integrated_model_name)"
    args="$(arg vehicle_controllers)" />
  <node
    name="world_frame_broadcaster"
    pkg="tf"
    type="static_transform_publisher"
    args="1 0 0 0 0 0 1 map dummy_link 50" />
  <node
    name="fake_joint_calibration"
    pkg="rostopic"
    type="rostopic"
    args="pub /calibrated std_msgs/Bool true" />
  <node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_model"
    args="$(arg init_vehicle_pose) -param robot_description -urdf -model $(arg integrated_model_name)"
    output="screen" />
  <node
    name="vehicle_joint_offsets_server"
    pkg="srr_kinematics"
    type="incorporate_joints_offsets_server"
    args="$(arg integrated_model_name)"
    output="screen" />
</launch>
